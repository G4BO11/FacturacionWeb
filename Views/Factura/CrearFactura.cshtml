<main class="w-full px-10">
    <h1 class="mb-5 mt-8 text-3xl font-bold tracking-tight">Factura Nueva</h1>
    <section>
        <form>
            <div class="mb-6 grid gap-6 md:grid-cols-2">
                <div class="col-span-2 md:col-span-1">
                    <label for="Cliente" class="mb-2 block text-sm font-medium text-gray-900">Cliente</label>
                    <input type="text" id="Cliente"
                        class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
                        placeholder="John" required />
                </div>
                <div class="col-span-2 md:col-span-1">
                    <label for="NIT" class="mb-2 block text-sm font-medium text-gray-900">NIT de la Empresa</label>
                    <div class="flex gap-x-2">
                        <input type="text" id="NIT"
                            class="w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
                            placeholder="000000-00" required />
                        <span class="flex items-center justify-center text-xl font-medium">-</span>
                        <input type="text" placeholder="00"
                            class="w-20 rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500" />
                    </div>
                </div>
                <div class="col-span-2">
                    <h4 class="mb-2 block font-medium text-gray-900">Productos a Llevar</h4>
                    <div class="flex min-h-36 w-full flex-col gap-3 rounded-lg bg-zinc-100 p-3">
                        <div class="flex flex-wrap gap-x-2 gap-y-3 md:flex-nowrap ">
                            <div class="flex gap-x-2 w-full">
                                <select name="Productos" id="selectProductos"
                                    class="w-full rounded-lg border-r-8 border-transparent p-3">
                                    <option value=""></option>
                                    <option value="ProductoCodigo1">Banano</option>
                                    <option value="ProductoCodigo2">Manzana</option>
                                    <option value="ProductoCodigo3">Coco</option>
                                </select>
                                <input type="number" name="Cantidad" id="inputCantidad" class="w-20 rounded-lg p-2.5"
                                    placeholder="0" min="0" />
                            </div>
                            <button
                                class="w-full rounded-lg bg-blue-700 text-sm font-medium text-white md:w-28 min-h-12">+
                                Agregar</button>
                        </div>
                        <div class="grid grid-cols-2 md:flex gap-3">
                            <div
                                class="flex aspect-square md:w-32 items-center justify-center rounded-lg border-2 text-gray-400">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                                    stroke="currentColor" class="h-6 w-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                </svg>
                            </div>
                            <div
                                class="flex aspect-square md:w-32 items-center justify-center rounded-lg border-2 p-1 text-gray-400">
                                <span class="text-wrap text-sm">Pocillo Navide√±o</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-6">
                <label for="email" class="mb-2 block text-sm font-medium text-gray-900">Email address</label>
                <input type="email" id="email"
                    class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-3 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
                    placeholder="john.doe@company.com" required />
            </div>
            <div class="mb-6 flex items-start">
                <button type="submit"
                    class="w-full rounded-lg bg-blue-700 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 sm:w-auto">Enviar
                    Factura</button>
            </div>
        </form>
    </section>
</main>
